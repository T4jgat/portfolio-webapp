<!DOCTYPE html>
<html lang="en">
<head>
    <title>All Projects</title>
    <link rel="stylesheet" href="/css/index.css">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
</head>
<body>

<header>
    <h1 id="header-title">Projects</h1>
    <p><%= userEmail %></p>

</header>
<% projects.forEach(project => { %>
    <a href="/project/<%= project.id %>">
        <div class="project-card">
            <div class="project-content">
                <div class="right-side">
                    <img class="project-image" style="  display: inline;
  max-width:200px;
  max-height: 200px;
  width: auto;
  height: auto;" src="/uploads/<%= project.img[0] %>" alt="Project Image">
                </div>
                <div class="left-side">
                    <h2 class="project-title"><%= project.title %></h2>
                    <p class="project-description"><%= project.description %></p>
                </div>
            </div>
            <div class="admin-actions">
                <div id="update-button"><a href="/update/project/<%= project.id %>">UPDATE</a></div>
                <form action="/delete/project/<%= project.id %>?_method=delete" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button id="delete-button" type="submit">DELETE</button>
                </form>
            </div>
        </div>
    </a>
<% }) %>

<footer>
    <p>Talgat Mukhtarov SE-2226</p>
</footer>

</body>
</html>