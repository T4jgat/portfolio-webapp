<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Update "<%= project.title %>"</title>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link rel="stylesheet" href="/css/create.css">
</head>
<body>
<div class="form-container">
    <h1>Update project</h1>

    <form action="/update/project/<%= project.id %>?_method=put" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="PUT">

        <% project.img.forEach(imageUrl => { %>
            <img class="ex-img" style="  display: inline;
  max-width:200px;
  max-height: 200px;
  width: auto;
  height: auto;" src="/uploads/<%= imageUrl %>" alt="Project Image">
        <% }) %>
        <div class="input-class">
            <input type="file" id="img" name="img" multiple accept="image/*">
        </div>

        <div class="input-class">
            <input type="text" id="title" placeholder="title" name="title" value="<%= project.title%>" required>
        </div>

        <div class="input-class">
            <textarea id="description" name="description" placeholder="description" required><%= project.description%></textarea>
        </div>

        <button type="submit">Update Project</button>
    </form>
</div>

</body>
</html>